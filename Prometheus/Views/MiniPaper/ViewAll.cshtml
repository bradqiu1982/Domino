@model IEnumerable < IEnumerable<Domino.Models.DominoVM>>

@{
    ViewBag.Title = "ViewAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ViewAll</h2>

<hr/>

@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="row">
            <div class="col-lg-12">
                @foreach (var card in item)
                {
                    <div class="col-lg-1 divclickable" value="@card.CardModalName">
                        <div class="col-lg-11">
                            <div class="panel panel-default" style="height:100px;width:90px;">
                                <div class="panel-heading  panel-heading-@card.CardColor" style="height:30px;">
                                    <div class="text-right">
                                        @card.CardNo
                                    </div>
                                </div>

                                <div class="panel-body panel-body-@card.CardColor" style="height:70px;">
                                    <h5 class="text-center"><strong>@card.CardContent</strong></h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-1"></div>
                    </div>
                }
            </div>
        </div>
        <hr/>
    }
}


@if (ViewBag.modalname != null)
{
    string partialpagename = ViewBag.modalname;
    @Html.Partial(partialpagename);

    <script type="text/javascript">
        $(document).ready(function () {
            $("#cardtag").modal({ backdrop: 'static' });
        });
    </script>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('.divclickable').click(function () {
            var modalname = this.getAttribute("value");
            if (modalname)
            {
                window.location.href = '/Domino/MiniPaper/CallCardModal?ModalName=' + modalname;
            }
        });
});
</script>


@using (Html.BeginForm("ECOPending", "MiniPaper", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="modal" id="cardtag" tabindex="-1" role="dialog" aria-labelledby="cardtagLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="cardtagLabel">ECO Pending</h4>
            </div>
            <div class="row"></div>
            <hr />
            <div class="row col-lg-12">
                <label class="control-label col-lg-4">Modal Name</label>
                <div class="col-lg-8">
                    <input class="form-control text-box single-line" value="@ViewBag.modalname" readonly="readonly" id="modalname" name="modalname" type="text" />
                </div>
            </div>
            <div class="row col-lg-12">
                <label class="control-label col-lg-4">ECO Key</label>
                <div class="col-lg-8">
                   <input class="form-control text-box single-line" value="@ViewBag.ECOKey" readonly="readonly" id="ECOKey" name="ECOKey" type="text" />
                </div>
            </div>
            <div class="row col-lg-12">
                <label class="control-label col-lg-4">Card Key</label>
                <div class="col-lg-8">
                    <input class="form-control text-box single-line" value="@ViewBag.CardKey" readonly="readonly" id="CardKey" name="CardKey" type="text" />
                </div>
            </div>
            <hr />
            <input type="submit" value="Submit" id="modalinput" name="modalinput" hidden="hidden"/>
            <div class="row"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="submitmodal()">Done</button>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">
    function submitmodal() {
        $("#cardtag").modal('hide');
        $("#modalinput").click();
    }
</script>
}

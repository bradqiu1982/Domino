@model IEnumerable < IEnumerable<Domino.Models.DominoVM>>

@{
    ViewBag.Title = "ViewAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>
<div class="row">
    <div class="col-lg-12" style="height:0.5em">&nbsp;</div>
</div>

<div class="row">
    <div class="col-lg-3">
        <ol class="breadcrumb" style="font-size:18px">
            <li class="active">Working MiniPIP Board</li>
        </ol>
    </div>
    <div class="col-lg-1">
        <a data-toggle="tooltip" title="Refresh System Information" href="/Domino/MiniPIP/RefreshSys"><span class="glyphicon glyphicon-refresh" aria-hidden="true" style="font-size:20px;width:100%;"></span></a>
    </div>
    <div class="col-lg-1">
        <button data-toggle="tooltip" title="Operation History" type="button" onclick="OperationHistory()" class="btn btn-default" style="height:3em;width:100%;"><span class="glyphicon glyphicon-time" aria-hidden="true"></span></button>
    </div>
    <div class="col-lg-3">
        <button data-toggle="tooltip" title="Completed MiniPIP" type="button" onclick="CompletedMiniPIP()" class="btn btn-default" style="height:3em; width:100%;">Completed MiniPIP</button>
    </div>
    <div class="col-lg-4">
    </div>

    <script type="text/javascript">
        function CompletedMiniPIP()
        {
            window.location.href = '/Domino/MiniPIP/CompletedMiniPIP';
        }
    </script>

    @if (ViewBag.HistoryInfos != null && ViewBag.HistoryInfos.Count > 0)
    {
        <script type="text/javascript">
        function OperationHistory()
        {
            $('#historymodal').modal();
        }
        </script>
    }
    else
    {
        <script type="text/javascript">
        function OperationHistory()
        {}
        </script>
    }
</div>

<div class="row">

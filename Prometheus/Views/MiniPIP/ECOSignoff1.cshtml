@if (ViewBag.CurrentCard != null)
{
    using (Html.BeginForm("ECOSignoff1", "MiniPIP", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <script src="../../ckeditor/ckeditor.js"></script>

        <div class="form-horizontal">
            <div class="form-group">
                <div class="row col-lg-6">
                    <label class="control-label col-lg-2">Page Name</label>
                    <div class="col-lg-10">
                        <input class="form-control text-box single-line" value="@ViewBag.CardDetailPage" readonly="readonly" id="modalname" name="modalname" type="text" />
                    </div>
                </div>
                <div class="row col-lg-6">
                </div>
            </div>

            <div class="form-group">
                <div class="row col-lg-6">
                    <label class="control-label col-lg-2">QA EEPROM Checked</label>
                    <div class="col-lg-10">
                        
                    </div>
                </div>
                <div class="row col-lg-6">
                    <label class="control-label col-lg-2">QA Label Checked</label>
                    <div class="col-lg-10">
                        
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row col-lg-6">
                    <label class="control-label col-lg-2">Peer Review Engineer</label>
                    <div class="col-lg-10">

                    </div>
                </div>
                <div class="row col-lg-6">
                    <label class="control-label col-lg-2">Peer Review Done</label>
                    <div class="col-lg-10">

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row col-lg-6">
                    <label class="control-label col-lg-2">ECO TR/MD Approver</label>
                    <div class="col-lg-10">

                    </div>
                </div>

                <div class="row col-lg-6">
                    <label class="control-label col-lg-2">ECO TR/MD Approved</label>
                    <div class="col-lg-10">

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row col-lg-12">
                    <label class="control-label col-lg-1">Code File:</label>
                    <label class="control-label col-lg-11"></label>
                </div>
            </div>

            <div class="form-group">
                <div class="row col-lg-12">
                    <label class="control-label col-lg-1">Spec File:</label>
                    <label class="control-label col-lg-11"></label>
                </div>
            </div>

            <div class="form-group">
                <div class="row col-lg-12">
                    <label class="control-label col-lg-1">Testing File:</label>
                    <label class="control-label col-lg-11"></label>
                </div>
            </div>

            <div class="form-group">
                <div class="row col-lg-6">
                    <input class="form-control text-box single-line" value="@ViewBag.ECOKey" type="hidden" id="ECOKey" name="ECOKey" />
                </div>
                <div class="row col-lg-6">
                    <input class="form-control text-box single-line" value="@ViewBag.CardKey" type="hidden" id="CardKey" name="CardKey" />
                </div>
            </div>

            <div class="form-group">
                <div class="row col-lg-6">
                    <label class="control-label col-lg-2">RSM Send Date</label>
                    <div class="col-lg-10">

                    </div>
                </div>

                <div class="row col-lg-6">
                    <label class="control-label col-lg-2">RSM Approve Date</label>
                    <div class="col-lg-10">

                    </div>
                </div>

            </div>

            <hr />
            <div class="form-group">
                <div class="col-lg-12">
                    <div class="col-lg-4">
                        <span class="btn btn-default btn-file" id="choosefile3">
                            Attachment <input type="file" name="file3" id="file3" runat="server" onchange="ShowFileNames3(this)" />
                        </span>
                    </div>
                    <div class="col-lg-8">
                        <div class="col-lg-11">
                            <label class="control-label" id="showfile3" name="showfile3"></label>
                        </div>
                        <div class="col-lg-1">
                            <input class="form-control text-box single-line" value="" id="attachmentupload" name="attachmentupload" type="hidden" />
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                                function ShowFileNames3(oFile) {
                                    $('#showfile3').text(oFile.value);
                                    document.getElementById("attachmentupload").value = oFile.value;
                                }
                </script>
            </div>

            <div class="form-group">
                <div class="col-lg-12">
                    <div class="col-lg-4">
                        <span class="btn btn-default btn-file" id="choosefile2">
                            Code File <input type="file" name="file2" id="file2" runat="server" onchange="ShowFileNames2(this)" />
                        </span>
                    </div>
                    <div class="col-lg-8">
                        <div class="col-lg-11">
                            <label class="control-label" id="showfile2" name="showfile2"></label>
                        </div>
                        <div class="col-lg-1">
                            <input class="form-control text-box single-line" value="" id="codefileupload" name="codefileupload" type="hidden" />
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                                function ShowFileNames2(oFile) {
                                    $('#showfile2').text(oFile.value);
                                    document.getElementById("codefileupload").value = oFile.value;
                                }
                </script>
            </div>

            <div class="form-group">
                <div class="col-lg-12">
                    <div class="col-lg-4">
                        <span class="btn btn-default btn-file" id="choosefile1">
                            Spec File <input type="file" name="file1" id="file1" runat="server" onchange="ShowFileNames1(this)" />
                        </span>
                    </div>
                    <div class="col-lg-8">
                        <div class="col-lg-11">
                            <label class="control-label" id="showfile1" name="showfile1"></label>
                        </div>
                        <div class="col-lg-1">
                            <input class="form-control text-box single-line" value="" id="specfileupload" name="specfileupload" type="hidden" />
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                                function ShowFileNames1(oFile) {
                                    $('#showfile1').text(oFile.value);
                                    document.getElementById("specfileupload").value = oFile.value;
                                }
                </script>
            </div>

            <div class="form-group">
                <div class="col-lg-12">
                    <div class="col-lg-4">
                        <span class="btn btn-default btn-file" id="choosefile0">
                            Testing File <input type="file" name="file0" id="file0" runat="server" onchange="ShowFileNames0(this)" />
                        </span>
                    </div>
                    <div class="col-lg-8">
                        <div class="col-lg-11">
                            <label class="control-label" id="showfile0" name="showfile0"></label>
                        </div>
                        <div class="col-lg-1">
                            <input class="form-control text-box single-line" value="" id="testingfileupload" name="testingfileupload" type="hidden" />
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                                function ShowFileNames0(oFile) {
                                    $('#showfile0').text(oFile.value);
                                    document.getElementById("testingfileupload").value = oFile.value;
                                }
                </script>
            </div>

            <hr />

            @if (ViewBag.CurrentCard.AttachList.Count > 0)
            {
                <div class="form-group">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Attachments</h3>
                            </div>
                            <div class="panel-body">
                                @foreach (var item in ViewBag.CurrentCard.AttachList)
                                {
                                    var fns = item.Split(new char[] { '/' });
                                    var fn = fns[fns.Length - 1];
                                    <div class="row col-lg-12">
                                        <div class="col-lg-11">
                                            <a href="@item" target="_blank">
                                                <span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span>@fn
                                            </a>
                                        </div>
                                        <div class="col-lg-1">
                                            <button class="form-control" value="@fn" onclick="DeleteCardAttachment(this)"  type="button">
                                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
            }

            @foreach (var item in ViewBag.CurrentCard.CommentList)
            {
                <div class="form-group">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Comment</h3>
                            </div>
                            <div class="panel-body" style="overflow-y: scroll;overflow-x: scroll;">
                                @Html.Raw(item.Comment)
                            </div>
                            <div class="panel-footer text-right">
                                Reporter: <a href="/User/UserCenter?username=@item.Reporter">@item.Reporter.Split(new char[] { '@' })[0]</a> @item.CommentDate.ToString("yyyy-MM-dd hh:mm:ss")
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
            }

            <div class="col-lg-12">
                <div class="form-group">
                    Comment
                </div>

                <div class="form-group">
                    <div>
                        <textarea name="commenteditor" id="commenteditor" rows="10" cols="80"></textarea>
                        <script>
                        CKEDITOR.replace('commenteditor', { htmlEncodeOutput: true, filebrowserImageUploadUrl: '/userfiles/Upload.ashx' });
                        </script>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row col-lg-9">
                </div>
                <div class="row col-lg-3">
                    <input type="submit" value="Submit" id="modalinput" name="modalinput" class="btn btn-default" />
                </div>
            </div>

        </div>
    }
}


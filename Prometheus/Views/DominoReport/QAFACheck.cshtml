
@{
    ViewBag.Title = "QAFACheck";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>QA FA Check</h2>

<hr />

@using (Html.BeginForm("QAFACheck", "DominoReport", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <div class="col-lg-3">
                        <label class="control-label" for="StartDate">StartDate</label>
                    </div>
                    <div class="col-lg-9">
                        <input class="form-control text-box single-line" id="StartDate" name="StartDate" type="text" value="" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="col-lg-3">
                        <label class="control-label" for="EndDate">EndDate</label>
                    </div>
                    <div class="col-lg-9">
                        <input class="form-control text-box single-line" id="EndDate" name="EndDate" type="text" value="" />
                    </div>
                </div>
                <script type="text/javascript">
                $(document).ready(function () {
                    $("#StartDate").datepicker({
                        changeMonth: true,
                        changeYear: true,
                        dateFormat: 'yy-mm-dd'
                    });
                    $("#EndDate").datepicker({
                        changeMonth: true,
                        changeYear: true,
                        dateFormat: 'yy-mm-dd'
                    });
                });
                </script>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <div class="col-lg-3"><label class="control-label" for="charttypelist">Chart Type</label></div>
                    
                    <div class="col-lg-9">
                            @Html.DropDownList("charttypelist", null, new { @id = "charttypelist", @class = "form-control" })
                        </div>
                </div>
                <div class="col-lg-6">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-12">
                <div class="col-lg-3">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
                <div class="col-lg-9">
                </div>
            </div>
        </div>

        <hr />

        @if (ViewBag.qafachart != null)
        {
            @Html.Raw(ViewBag.qafachart)

            <script src="~/Scripts/highcharts.js"></script>
            <script src="~/Scripts/exporting.js"></script>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">QAFACheck</h3>
                        </div>
                        <div class="panel-body">
                            <div class="col-lg-12">
                                <div id="qafachart" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
}

